@model IPagedList<ECommerceApp.DTOs.ProductDto>

@{
    ViewData["Title"] = $"Products in Category {ViewBag.CategoryId}";
}

<!-- Sorting Links -->
<div class="sorting-controls">
    <h2>Products in Category @ViewBag.CategoryId</h2>
    <div>
        Sort by:
        <a href="?sortBy=name" @(ViewBag.SortBy == "name" ? "class=active" : "")>Name</a> |
        <a href="?sortBy=price" @(ViewBag.SortBy == "price" ? "class=active" : "")>Price (Low to High)</a> |
        <a href="?sortBy=price_desc" @(ViewBag.SortBy == "price_desc" ? "class=active" : "")>Price (High to Low)</a>
    </div>
</div>

<!-- Product List -->
<div class="product-list">
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 product-item">
                    <div class="card mb-3">
                        <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top" onerror="this.src='/images/default-product.jpg'" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">Price: $@product.Price</p>
                            <p class="card-text">Stock: @product.Stock</p>
                            <p class="card-text">Category ID: @product.CategoryId</p>
                            <a href="@Url.Action("Details", "Product", new { id = product.ProductId })" class="btn btn-primary">View Details</a>
                            <a href="#" class="btn btn-secondary">Add to Cart</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No products found in this category.</p>
    }
</div>

<!-- Pagination Controls -->
<div class="pagination-controls">
    @Html.PagedListPager(Model, page => Url.Action("ByCategory", new { categoryId = ViewBag.CategoryId, page, sortBy = ViewBag.SortBy }), new PagedListRenderOptions
{
    Display = PagedListDisplayMode.IfNeeded,
    DisplayPageCountAndCurrentLocation = true,
    MaximumPageNumbersToDisplay = 5
})
</div>

<!-- Optional CSS for Basic Styling (if not using Bootstrap) -->
<style>
    .product-list {
        margin-top: 20px;
    }

    .product-item {
        margin-bottom: 20px;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
    }

    .card-img-top {
        max-height: 300px;
        object-fit: cover;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 10px;
    }

    .card-text {
        margin-bottom: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 3px;
        margin-right: 5px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 3px;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .sorting-controls a.active {
        font-weight: bold;
        color: #007bff;
    }

    .pagination-controls {
        margin-top: 20px;
    }
</style>