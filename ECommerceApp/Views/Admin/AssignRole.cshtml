@model ECommerceApp.View_Models.AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<h2>Assign Role to @Model.User.UserName</h2>

<form asp-action="AssignRole" method="post">
    <input type="hidden" name="userId" value="@Model.User.Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>Roles</label>
        @Html.ListBox("roles", new MultiSelectList(Model.AvailableRoles, Model.CurrentRoles), new { @class = "form-control", multiple = "multiple" })
        <span class="text-danger"></span> <!-- Add validation later if needed -->
    </div>

    <div class="form-group">
        <input type="submit" value="Assign Roles" class="btn btn-primary" />
        <a asp-action="ManageUsers" class="btn btn-secondary">Back to Users</a>
    </div>
</form>

<!-- Bootstrap CSS/JS (if not already in _Layout.cshtml) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Optional CSS for Custom Styling -->
<style>
    .form-group {
        margin-bottom: 15px;
    }
</style>