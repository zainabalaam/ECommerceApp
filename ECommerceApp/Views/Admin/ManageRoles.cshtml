@model List<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Manage Roles";
}

<h2>Manage Roles</h2>

<a asp-action="CreateRole" class="btn btn-primary mb-3">Create New Role</a>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <!-- Add actions (e.g., edit, delete) later if needed -->
                </td>
            </tr>
        }
    </tbody>
</table>