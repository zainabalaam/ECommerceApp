@model List<(ECommerceApp.Models.ApplicationUser User, List<string> Roles)>

@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var (user, roles) in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in roles)
                    {
                        <span class="badge bg-primary">@role</span>
                    }
                </td>
                <td>
                    <a asp-action="AssignRole" asp-route-userId="@user.Id" class="btn btn-sm btn-primary">Assign Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

